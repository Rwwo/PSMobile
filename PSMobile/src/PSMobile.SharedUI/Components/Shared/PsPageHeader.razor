<MudCard Class="@Class">
    <MudCardContent>
        <MudGrid>
            <MudItem xs="12" sm="8" md="8" lg="8">
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icon" Class="mb-1" Size="Size.Large" />
                    <MudText Typo="Typo.h5" Style="font-weight: bold">@Title</MudText>
                </MudStack>
            </MudItem>

            <MudItem xs="12" sm="4" md="4" lg="4" Class="d-flex justify-end">
                @if (OnClickGoBack.HasDelegate)
                {
                    <MudButton Disabled="@ButtonDisabled"
                               StartIcon="@Icons.Material.Filled.ArrowBack"
                               IconSize="Size.Large"
                               Variant="Variant.Filled"
                               Size="Size.Medium"
                               Color="Color.Warning"
                               @onclick="@OnClickGoBack"
                               Class="mr-2">
                        @ButtonTextBack
                    </MudButton>
                }

                @if (OnClick.HasDelegate)
                {
                    <MudButton Disabled="@ButtonDisabled"
                               StartIcon="@ButtonIcon"
                               IconSize="Size.Large"
                               Variant="Variant.Filled"
                               Size="Size.Medium"
                               Color="Color.Primary"
                               @onclick="@OnClick"
                               Class="mr-2">
                        @ButtonText
                    </MudButton>
                }
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

@code

{
    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string ButtonTextBack { get; set; }

    [Parameter]
    public string ButtonText { get; set; }

    [Parameter]
    public string ButtonIcon { get; set; } = Icons.Material.Outlined.Add;

    [Parameter]
    public bool ButtonDisabled { get; set; }

    [Parameter]
    public EventCallback<bool> ButtonDisabledChanged { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClickGoBack { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
}